<% layout('/layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center text-white">Edit College</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/colleges/<%=college._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label text-white" for="title">Name</label>
                    <input class="form-control" type="text" id="title" name="college[title]"
                        value="<%=college.title%>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="college[location]"
                        value="<%=college.location%>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="ctc">Avg CTC per Annum (in LPA)</label>
                    <div class="input-group">
                        <span class="input-group-text" id="ctc-label">&#8377;</span>
                        <input type="text" class="form-control" id="ctc" placeholder="0.00" name="college[ctc]"
                            aria-label="ctc" aria-describedby="ctc-label" value="<%=college.ctc%>" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="college[description]"
                        required><%=college.description%></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label text-white">Add More Image(s)</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <%college.images.forEach(function(img, i) {%>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt=""> 
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label class="text-white" for="image-<%=i%>">Delete?</label>
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update College</button>
                </div>
            </form>
            <!-- <div> -->
            <a href="/colleges/<%=college._id%>" class="btn btn-secondary font-weight-bold border-dark bg-dark text-white">Go back to college</a>
        </div>
    </div>